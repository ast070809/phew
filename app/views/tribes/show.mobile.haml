%div{'data-role'=> 'page','data-url'=> "#{request.path}"}
	= render 'layouts/mobile/panel'
	%div{"data-role" => "header"}
		= render 'layouts/mobile/header'
	.ui-content{role: "main", style:'padding-left:2px; padding-right:2px; padding-top:0px;'}	
		.ui-grid-b.ui-mini
			.ui-block-a
				%button
					Hot
			.ui-block-b
				%button
					Top
			.ui-block-c
				%button
					New
		=render 'layouts/mobile/flash'
		-@posts.each do |p|
			= render 'posts/post', :p=> p
		=paginate @posts, theme: 'twitter-bootstrap-3'
	%div{"data-role" => "footer"}
		= render 'layouts/mobile/footer'