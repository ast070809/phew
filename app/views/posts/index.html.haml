.row{id: 'index-post-container'}
	.col-lg-8.col-lg-offset-1.col-md-8.col-md-offset-1.col-sm-8.col-sm-offset-1.col-xs-9.col-xs-offset-1
		-@posts.each do |p|
			= render 'post', :p=> p
				
		=paginate @posts, theme: 'twitter-bootstrap-3'
	.col-lg-3.col-md-3.col-sm-3.col-xs-2
:javascript
	$.backstretch([
		"#{asset_path('bg4.jpg')}",
		"#{asset_path('bg5.jpg')}",
	], {
		fade: 1000,
		duration: 60000
	});		