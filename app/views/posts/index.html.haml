.row
	.col-lg-8.col-lg-offset-1.col-md-8.col-md-offset-1.col-sm-8.col-sm-offset-1.col-xs-9.col-xs-offset-1
		-@posts.each do |p|
			.panel.panel-default
				.panel-body
					.row
						.col-xs-1.col-md-1.text-center
							.row
								=link_to upvote_post_path(p), method: 'put' do
									=fa_icon "arrow-up", class: 'h4'
							.row
								%strong
									=p.likes.size-p.downvotes.size
							.row
								=link_to downvote_post_path(p), method: 'put' do
									=fa_icon "arrow-down", class: 'h4'
						.col-md-2
							=image_tag p.pic.url(:thumb), alt: 'post photo'
						.col-xs-9.col-md-7
							%h4
								=link_to("#{p.title}", post_path(p))
								-if p.source?
									.source_link
										(
										=p.source
										)
							.bs-callout.bs-callout-info
								Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. 
						.col-xs-2.col-md-2
							=pluralize(comment_count(p.id), 'comment')
					.row
						.col-md-9.col-md-offset-1
							-if user_signed_in? && current_user_poster?(p)
								=link_to "Delete", delete_post_path(p), method: "delete"
					.row
						.col-md-11.col-md-offset-1
							-tags = p.tag_list
							%ul.list-inline
								Tags:
								-tags.each do |t|
									%li
										=link_to t, tag_path(t), class: 'label label-info'
		=paginate @posts, theme: 'twitter-bootstrap-3'
	.col-lg-3.col-md-3.col-sm-3.col-xs-2
		.panel.panel-body
			.row
				.col-md-12.text-center
					%h4
						Todays top
