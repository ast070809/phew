.row
	.col-md-6.col-md-offset-3
		=render 'layouts/messages'
.margin-bottom-10

.panel-body
	=form_tag search_path, :method => 'get', class: 'form-horizontal' do
		%label.col-md-6.control-label
			Search Posts:
		.form-group
			.col-md-6
				=text_field :searchquery, '', class: 'form-control'
		.form-group
			.col-md-3.col-md-offset-6
				=submit_tag :submit, class: 'btn btn-default form-control'

.row
	.col-md-12
		%div{style:'padding-left:15px;'}
			=render 'layouts/trending_tribes'
	.margin-bottom-10
.row
	.col-md-2
		=render 'layouts/sidebar'
	.col-md-10
		#index-post-container
			-if @post_index or @tribe_show
				=render 'layouts/index'
			-@posts.each do |p|
				= render 'post', :p=> p
			=paginate @posts
	
.margin-bottom-60
:javascript
	$('.vote-arrow').click(function(){
		var signed_in = #{user_signed_in?};
		if(signed_in){
		}
		else{
			
			notify('Please Sign in to vote!', 'error', 2000);
		}
	});
