-#.panel.panel-default.post_panel
.tag-box.tag-box-v1.tag-box-v2.post-container
	.row
		.col-xs-1.col-md-1.text-center.vote-cont
			.up-down-vote-box
				.row
					=link_to upvote_post_path(p), method: 'put' do
						%h4
							.vote-arrow
								=fa_icon "chevron-up"
						=#image_tag "arrow-up.png", height:25, width:20
						=#fa_icon "arrow-up 2x"
				.row
					.net-vote
						%strong 
							=p.likes.size-p.downvotes.size
				.row
					=link_to downvote_post_path(p), method: 'put' do
						%h4
							.vote-arrow
								=fa_icon "chevron-down"
						=#image_tag "down.png", height: 25, width:20
						=#fa_icon "arrow-down 2x"
		.col-md-1.post-image-cont
			=image_tag p.pic.url(:thumb), alt: 'post photo', height:60
		.col-xs-10.col-md-8.post-mid-part
			.post-heading
				=link_to "#{p.title}", p.link, target: '_blank', class: 'title-of-link'
				-if p.source?
					%span.source_link
						(
						=p.source
						)
			.link_descrip
				=truncate(p.description, length:150)
			.row.post_footer
				.col-md-8
					.submited_ago_cont
						Submited
						=time_ago_in_words(p.created_at)
						ago by
						%strong 
							=link_to p.user.username, p.user
						-if p.tribe
							to
							%strong
								=p.tribe.name
				.col-md-4
					.pull-right
						-if user_signed_in?
							=link_to "report", report_post_path(p), method: :post
						
						-if user_signed_in? && current_user_poster?(p)
							=link_to "delete", delete_post_path(p), method: "delete", class: 'delete-post'

			.row
				.col-md-12.tag-cont
					-tags = p.tag_list
					-if !tags.empty?
						%ul.list-inline
							Tags:
							-tags.each do |t|
								%li
									=link_to t, tag_path(t), class: 'label label-info'
		.col-xs-2.col-md-2.cmnt-indx-cont
			=link_to "<i class='fa fa-comment color-light-green'></i>&nbsp#{pluralize(comment_count(p.id), 'comment')}</i>".html_safe, p, class: 'btn btn-default  comments-btn', method: 'get'
			.row
				.col-md-12
					- tc = top_comment(p.id)
					-if tc.present?
						%p
							%strong Top comment - 
							=link_to truncate(tc.body, length:50), p
							%p 
								by
								%strong 
									=link_to tc.user.username, tc.user
