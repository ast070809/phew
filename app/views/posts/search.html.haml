.margin-bottom-10
.row
	.margin-bottom-10
	.col-md-12
		%div{style:'background-color:white; margin-left:15px; margin-right:15px; padding-top:4px; padding-bottom:4px; '}
			.custom-center
				%h4
					Search Results
.margin-bottom-10

.row
	.col-md-2
		=render 'layouts/sidebar'
	.col-md-10
		#searchpage-container
			- if @posts.empty?
				.panel.panel-body.custom-center{style:'margin-right:15px;'}
					%strong No Results Found
			-else
				-@posts.each do |p|
					= render 'post', :p=> p
				=paginate @posts
.margin-bottom-20