.row
	.col-md-10.col-md-offset-1
		.panel.panel-default
			.panel-heading
				.row
					.col-md-1.text-center
						.row
							=image_tag "arrow-up.png", height:15, width:12
						.row
							=p.netvotes
						.row
							=image_tag "down.png", height:15, width:12
					.col-md-9
						.row
							.col-md-12
								%strong
									=link_to p.title, p.link
								
						.row
							.col-md-12
								%p
									Submited
									=time_ago_in_words(p.created_at)
									ago 
									-if p.tribe
										to
										%strong
											=p.tribe.name


			.panel-body
				%p
					=p.description

