.row
	.col-md-10.col-md-offset-1
		.panel.panel-default
			.panel-heading
				.row
					.col-md-1.text-center
						.row
							=fa_icon "chevron-up"
						.row
							=c.netvote
						.row
							=fa_icon "chevron-down"
					.col-md-9
						.row
							.col-md-12
								%strong
									=c.body								
									
			.panel-body
				-post_id = c.commentable_id
				-post_type = c.commentable_type
				%p
					-post = Post.find(post_id)
					%strong Post
					=link_to post.title, post

