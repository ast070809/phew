%nav.navbar{role: "navigation", id: 'top-nav'}
  / Brand and toggle get grouped for better mobile display
  .navbar-header
    %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: root_path} Brand
  / Collect the nav links, forms, and other content for toggling
  #bs-example-navbar-collapse-1.collapse.navbar-collapse
    %ul.nav.navbar-nav
      %li.divider
      %li
        =link_to (fa_icon "plus-circle", class: 'color-light-green', text: 'Submit a new link'), '#', class: 'color-light-green', id: 'submit-new-link','data-toggle'=>"modal" ,'data-target'=>"#create-link-modal", class: 'btn btn-success top-nav-create-btn'
    %ul.nav.navbar-nav.navbar-right
      %li{style: 'padding-right: 10px;'}
        -if user_signed_in?
          .btn-group{style: 'cursor:pointer;'}
            #user-name-nav{"data-toggle"=> 'dropdown'}
              =fa_icon "user"
              =current_user.username
              =fa_icon "caret-down"
            %ul.dropdown-menu
              %li
                =link_to 'My Account', current_user
              %li.divider
              %li
                =link_to 'Sign out', destroy_user_session_path, method: 'delete'      
        -else
          =link_to('Login', new_user_session_path)
.row
  .col-md-12
    -if current_page?(root_path)
      =render 'layouts/index'
    -else
      = render 'layouts/show'
/ Modal
=render 'partials/create_link_modal'