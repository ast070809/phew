%nav.navbar.navbar-inverse{role: "navigation"}
  / Brand and toggle get grouped for better mobile display
  .navbar-header
    %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: root_path} Brand
  / Collect the nav links, forms, and other content for toggling
  #bs-example-navbar-collapse-1.collapse.navbar-collapse
    %ul.nav.navbar-nav
      %li.divider
      %li
        =link_to (fa_icon "plus-circle", class: 'color-light-green', text: 'Submit a new link'), '#', class: 'color-light-green', id: 'submit-new-link','data-toggle'=>"modal" ,'data-target'=>"#create-link-modal"
    %ul.nav.navbar-nav.navbar-right
      %li
        -if user_signed_in?
          =current_user.email
        -else
          =link_to('Login', new_user_session_path)
      %li
        -if user_signed_in?
          =link_to 'Sign out', destroy_user_session_path, method: 'delete'
.row
  .col-md-12
    -if current_page?(root_path)
      =render 'layouts/index'
    -else
      = render 'layouts/show'
