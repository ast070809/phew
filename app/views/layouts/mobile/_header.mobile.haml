%div{"data-role" => "header"}
	%ul
		.center-wrapper
			=image_tag 'logo_90.png'
		%a.dropdown-toggle.ui-btn.ui-mini.ui-btn-left{ 'data-toggle'=>"dropdown", 'data-hover'=>"dropdown", 'data-delay'=>"0", 'data-close-others'=>"false"}
			= if @tribe.nil? then 'All' else @tribe.name end
		%ul.dropdown-menu
			%li
				=link_to "All", root_path, 'data-ajax'=> false
			-@tribes.each do |tr|
				%li
					=link_to tr.name, tr, 'data-ajax'=> false
	-if user_signed_in?
		%a.ui-nodisc-icon.ui-alt-icon.ui-btn-right.ui-btn.ui-icon-bars.ui-btn-icon-notext.ui-corener-all{href:"#rightpanel3"}
	-else
		=link_to 'Sign up/Login', new_user_session_path, class: 'ui-btn-right ui-btn ui-btn-inline ui-mini ui-corner-all ui-btn-icon-right ui-icon-user', 'data-transition'=> 'pop'
