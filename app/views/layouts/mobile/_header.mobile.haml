%div{"data-role" => "header"}
	%ul
		%a.dropdown-toggle.ui-btn.ui-mini.ui-btn-left{ 'data-toggle'=>"dropdown", 'data-hover'=>"dropdown", 'data-delay'=>"0", 'data-close-others'=>"false"}
			= if @tribe.nil? then 'All' else @tribe.name end
			=fa_icon 'caret-down'
		%ul.dropdown-menu
			%li
				=link_to "All", root_path, 'data-ajax'=> false
			-@tribes.each do |tr|
				%li.divider{style:'margin-top:5px !important; margin-bottom:5px; !important'}
				%li
					=link_to tr.name, tr, 'data-ajax'=> false

		.center-wrapper{id:'amobile-logo-cont'}
			%span{style:'position:relative; margin-left:-50px;'}
				=link_to image_tag('logo_90.png', alt: 'logo'), root_path
	-if user_signed_in?
		%a.ui-nodisc-icon.ui-alt-icon.ui-btn-right.ui-btn.ui-icon-bars.ui-btn-icon-notext.ui-corener-all{href:"#rightpanel3"}
	-else
		=link_to 'Sign up/Login', new_user_session_path, class: 'ui-btn-right ui-btn ui-btn-inline ui-mini ui-corner-all ui-btn-icon-right mobile-signup-btn', 'data-transition'=> 'pop'
