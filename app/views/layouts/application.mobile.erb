<!DOCTYPE html>
<html>
<head>
  <title>Niblin</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "http://api.recaptcha.net/js/recaptcha_ajax.js" %>
  <%= stylesheet_link_tag    "/assets/jquery-mobile/jquery.mobile-1.4.2.min.css", media: "all", "data-turbolinks-track" => false %>
  <%= javascript_include_tag "/assets/jquery-mobile/jquery.mobile-1.4.2.min.js", "data-turbolinks-track" => false %>
  
  <%= stylesheet_link_tag    "/assets/mobile.css", media: "all", "data-turbolinks-track" => false %>
  
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta property="og:title" content="Niblin" />
  <meta property="og:description" content="Niblin is a community where we share our great finds on the web" />
  <meta property="og:url" content="http://www.niblin.com/" />
  <meta property="og:image" content="http://www.niblin.com/assets/logo_150.png" />
  
  <meta name="description" content="Niblin is a community where we share our great finds on the web">

  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-50235584-1', 'niblin.com');
  ga('send', 'pageview');
</script>
<script type="text/javascript">
  $(document).bind("mobileinit", function () {
    $.mobile.ajaxEnabled = false;
    $.mobile.linkBindingEnabled = false;
    $.mobile.hashListeningEnabled = false;
    $.mobile.pushStateEnabled = false;
  });
  
  $('div[data-role="page"]').live('pagehide', function (event, ui) {
    $(event.currentTarget).remove();
  });

</script>

</head>
<body>
  <%= yield %>
</body>

</html>
