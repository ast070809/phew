.container
  / Reg Block
  .reg-block
    .reg-block-header
      %h2 Sign Up
      =render 'layouts/messages'
      =devise_error_messages!
      %a{href: user_omniauth_authorize_path(:facebook)}
        .fb-btn{style:'margin-top:20px;'}
          %span.fb-btn-icon
            =fa_icon "facebook"
          Signup with Facebook
      .or.custom-center
        Or, 
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      .input-group.margin-bottom-20
        %span.input-group-addon
          %i.icon-user
        = f.text_field :username, class: 'form-control',:autofocus => true, placeholder: 'Username'
      .input-group.margin-bottom-20
        %span.input-group-addon
          %i.icon-envelope
        = f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email'        
      %span.input-group-addon
        %i (minimum 8 characters)
      .input-group.margin-bottom-20
        %span.input-group-addon
          %i.icon-lock
        = f.password_field :password, class: 'form-control', placeholder: 'Password'
      .input-group.margin-bottom-20
        %span.input-group-addon
          %i.icon-key
        = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password'
      .input-group.margin-bottom-30
        .row
          .col-md-6
            = render 'shared/recaptcha'
            = recaptcha_tags :display=>{:theme=>'custom', custom_theme_widget: 'recaptcha_widget'}

      %hr/
      %label.checkbox
        %input{type: "checkbox"}/
        %p
          I read
          =link_to "Terms of Use", terms_of_use_path

      .row
        .col-md-10.col-md-offset-1
          = f.submit "Register", class: 'btn-u btn-block'
      .row
        = render "devise/shared/links"
          

:javascript
  $.backstretch([
    "#{asset_path('bg4.jpg')}",
    "#{asset_path('bg5.jpg')}",
    ], {
      fade: 1000,
      duration: 7000
  });   