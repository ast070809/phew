=render 'layouts/user_header'
.container
  / Reg Block
  .reg-block
    .reg-block-header
      %h2 Edit your profile
      =render 'layouts/messages'
      =devise_error_messages!
    .reg-block-header
    
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.icon-user
          = f.text_field :username, class: 'form-control',:autofocus => true, placeholder: 'Username'
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.icon-envelope
          = f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email'        
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          .input-group.margin-bottom-20
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        
        %span.input-group-addon
          %i (leave blank if you don't want to change it)
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.icon-lock
          = f.password_field :password, class: 'form-control', placeholder: 'Password'
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.icon-key
          = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password'
        

        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.icon-key
          = f.password_field :current_password, class: 'form-control', placeholder: 'Current Password'
        .row
          .col-md-10.col-md-offset-1
            = f.submit "Update", class: 'btn-u btn-block'
            
    .reg-block-header.margin-bottom-60
      .row
        
        .col-md-4
          %p
            Unhappy? 
        .col-md-8
          = link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: ''
      
:javascript
  $.backstretch([
    "#{asset_path('bg4.jpg')}",
    "#{asset_path('bg5.jpg')}",
    ], {
      fade: 1000,
      duration: 7000
  });   